@using MijnMaaltijd.Models;
@using MijnMaaltijd.Locales;
@model SearchRecipe

@{
  ViewBag.Title = SearchLocales.Title;
}

<h2>@SearchLocales.Title</h2>

@using (Html.BeginForm())
{
  @Html.AntiForgeryToken()
  @Html.ValidationSummary(true)

  <fieldset>
    <legend>Criteria</legend>

    <div class="editor-label">
      @Html.LabelFor(model => model.Name, SearchRecipeLocales.NameContains)
    </div>
    <div class="editor-field">
      @Html.EditorFor(model => model.Name)
      @Html.ValidationMessageFor(model => model.Name)
    </div>

    <div class="editor-label">
      @Html.LabelFor(model => model.SeasonID, SearchRecipeLocales.Season)
    </div>
    <div class="editor-field">
      @Html.DropDownList("SeasonID", String.Empty)
      @Html.ValidationMessageFor(model => model.SeasonID)
    </div>

    <div class="editor-label">
      @Html.LabelFor(model => model.TypeID, SearchRecipeLocales.Type)
    </div>
    <div class="editor-field">
      @Html.DropDownList("TypeID", String.Empty)
      @Html.ValidationMessageFor(model => model.TypeID)
    </div>

    <div class="editor-label">
      @Html.LabelFor(model => model.IsMeat, SearchRecipeLocales.IsMeat)
    </div>
    <div class="editor-field">
      @Html.EditorFor(model => model.IsMeat)
      @Html.ValidationMessageFor(model => model.IsMeat)
    </div>

    <div class="editor-label">
      @Html.LabelFor(model => model.IsFish, SearchRecipeLocales.IsFish)
    </div>
    <div class="editor-field">
      @Html.EditorFor(model => model.IsFish)
      @Html.ValidationMessageFor(model => model.IsFish)
    </div>

    <div class="editor-label">
      @Html.LabelFor(model => model.IsVegetarian, SearchRecipeLocales.IsVegetarian)
    </div>
    <div class="editor-field">
      @Html.EditorFor(model => model.IsVegetarian)
      @Html.ValidationMessageFor(model => model.IsVegetarian)
    </div>

    <div class="editor-label">
      @Html.LabelFor(model => model.IsVegan, SearchRecipeLocales.IsVegan)
    </div>
    <div class="editor-field">
      @Html.EditorFor(model => model.IsVegan)
      @Html.ValidationMessageFor(model => model.IsVegan)
    </div>

    <div class="editor-label">
      @Html.LabelFor(model => model.IsGlutenFree, SearchRecipeLocales.IsGlutenFree)
    </div>
    <div class="editor-field">
      @Html.EditorFor(model => model.IsGlutenFree)
      @Html.ValidationMessageFor(model => model.IsGlutenFree)
    </div>

    <div class="editor-label">
      @Html.LabelFor(model => model.IsVeganAdaptable, SearchRecipeLocales.IsVeganAdaptable)
    </div>
    <div class="editor-field">
      @Html.EditorFor(model => model.IsVeganAdaptable)
      @Html.ValidationMessageFor(model => model.IsVeganAdaptable)
    </div>

    <div class="editor-label">
      @Html.LabelFor(model => model.IsGlutenFreeAdaptable, SearchRecipeLocales.IsGlutenFreeAdaptable)
    </div>
    <div class="editor-field">
      @Html.EditorFor(model => model.IsGlutenFreeAdaptable)
      @Html.ValidationMessageFor(model => model.IsGlutenFreeAdaptable)
    </div>

    <p>
      <input type="submit" value="@(ButtonLocales.Search)" />
    </p>
  </fieldset>
}

@if (ViewBag.SearchResult != null)
{
  @Html.Partial("RecipeList", (IEnumerable<Recipe>)ViewBag.SearchResult);
}
